# Configurações do Servidor
NODE_ENV=development
PORT=3002
HOST=localhost

# Configurações JWT
JWT_SECRET=minha_chave_jwt_super_secreta_para_desenvolvimento_com_mais_de_32_caracteres
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=minha_chave_refresh_jwt_super_secreta_para_desenvolvimento_com_mais_de_32_caracteres
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de Senha
BCRYPT_ROUNDS=12

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_REGISTRATION_MAX=3
RATE_LIMIT_PASSWORD_RESET_MAX=3

# Configurações de CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Configurações de Logging
LOG_LEVEL=info
LOG_MAX_ENTRIES=1000

# Configurações de Segurança
SECURE_HEADERS=true

# Configurações de Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# URL Base da Aplicação
APP_URL=http://localhost:3002

# Configurações de Monitoramento
ENABLE_METRICS=false

# Configurações de Desenvolvimento
ENABLE_SWAGGER=true
SWAGGER_PATH=/docs

# This was inserted by `prisma init`:
# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

DATABASE_URL="file:./dev.db"