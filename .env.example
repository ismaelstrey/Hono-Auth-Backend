# Configurações do Servidor
NODE_ENV=development
PORT=3000
HOST=localhost

# Configurações JWT (IMPORTANTE: Altere estes valores em produção!)
JWT_SECRET=sua_chave_jwt_super_secreta_com_pelo_menos_32_caracteres_aqui
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=sua_chave_refresh_jwt_super_secreta_com_pelo_menos_32_caracteres_aqui
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de Senha
BCRYPT_ROUNDS=12

# Configurações de Email (Opcional - para futuras implementações)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=seu_email@gmail.com
# SMTP_PASS=sua_senha_de_app
# SMTP_FROM=noreply@seudominio.com

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_REGISTRATION_MAX=3
RATE_LIMIT_PASSWORD_RESET_MAX=3

# Configurações de CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Configurações de Logging
LOG_LEVEL=info
LOG_MAX_ENTRIES=1000

# Configurações de Segurança
SECURE_HEADERS=true

# Configurações de Upload (Opcional - para futuras implementações)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# URL Base da Aplicação
APP_URL=http://localhost:3000

# Configurações de Banco de Dados (Opcional - para futuras implementações com Prisma)
# DATABASE_URL="postgresql://usuario:senha@localhost:5432/nome_do_banco?schema=public"

# Configurações de Cache (Opcional - para futuras implementações)
# REDIS_URL=redis://localhost:6379

# Configurações de Monitoramento
ENABLE_METRICS=false

# Configurações de Desenvolvimento
ENABLE_SWAGGER=true
SWAGGER_PATH=/docs